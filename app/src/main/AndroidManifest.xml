<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pomodoro">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pomodoro_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pomodoro_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pomodoro">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".Statistical.StatisticalActivity" />
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".SetTimeFunctions.SettimeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TasksFunctions.TasksActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>