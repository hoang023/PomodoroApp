<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_SetTime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@android:color/transparent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="0dp"
        android:background="#C1A1E9"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tx_focustime"
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/khungtron"
                    android:gravity="center"
                    android:text="0"
                    android:scrollbars="vertical"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />

                <TextView
                    android:id="@+id/tx_breaktime"
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/khungtron"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />

                <TextView
                    android:id="@+id/tx_stagestime"
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/khungtron"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />
            </TableRow>

            <TableRow
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="35dp"
                    android:text="Focus"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="30dp"
                    android:text="Break"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="25dp"
                    android:text="Stages"
                    android:textColor="@color/white"
                    android:textSize="26dp"
                    tools:layout_editor_absoluteX="52dp"
                    tools:layout_editor_absoluteY="250dp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/savetime"
            android:layout_width="136dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="37dp"
            android:background="@drawable/main_color"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#ffff"
            android:textSize="20sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/stop"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/stop"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout2"
        android:layout_marginTop="5dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow android:layout_height="120dp">

            <Button
                android:id="@+id/skipbutton"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/skip" />

            <Button
                android:id="@+id/returnbutton"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/back" />

            <Button
                android:id="@+id/tasksbutton"
                android:layout_width="100dp"
                android:layout_height="115dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/tasks" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/stage"
                android:layout_width="171dp"
                android:layout_height="75dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/stage"
                android:text="0/0"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="70dp"/>

            <ImageView
                android:id="@+id/detailtbutton"
                android:layout_width="171dp"
                android:layout_height="75dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/detail" />

        </TableRow>

    </TableLayout>

</RelativeLayout>